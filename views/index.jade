extends layout

block body
	div(class='container')
		div(ng-controller='AppCtrl')
			div(class='navbar', bs-navbar)
			
				div(class='navbar-inner')
					a(class='brand', href='#') Title

					ul(class='nav')
						li(data-match-route="/about")
							a(href="view1") About
						li(data-match-route="/about")
							a(href="view2") View
	
			h2 Hello {{name}}
			div(class='alert alert-info') How is it?

			a(class='btn btn-large btn-success', bs-button) Hello

			div(ng-view)

			div
				| Angular seed app: v
				span(app-version)

	script(src='js/lib/angular/angular.js')
	script(src='js/lib/angular-strap.js')
	script(src='js/app.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
